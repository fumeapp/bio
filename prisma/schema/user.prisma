model User {
  id         Int      @id @default(autoincrement())
  email      String      @unique
  name       String?
  avatar     String?
  providers  Provider[]
  sessions   Token[]
  pens       Pen[]
  cartridges Cartridge[]
  shots      Shot[]
  payload    String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("users")
}

model Provider {
  id        Int   @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  name      String?
  avatar    String?
  payload   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@map("providers")
}

model Token {
  id         Int   @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  hash       String   @unique
  source     String
  ip         String
  agent      String
  location   String
  // coordinate Unsupported("Point")
  coordinate String   @default("30.2423 -97.7672")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("tokens")
}
